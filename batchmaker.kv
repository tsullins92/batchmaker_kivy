#:kivy 1.9.1

<BMLabel@Label>:
    outline_width: 3
    font_size: 45
        
<TempLabel@Label>:     
    font_size: 30
        
<Batchmaker>:
    canvas:
        Color:
            rgb:0,0,1
        BorderImage:
            pos:self.pos
            size:self.size
            border: 10, 10, 10, 10
            source:'rounded_corners.png'
    orientation: 'vertical'
    padding: 20
    spacing: 10
           
<BatchmakerDisplay>:   
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    padding: 20
    spacing: 20
            
    cols: 3
    
    m601: m60_1
    m602: m60_2
    m603: m60_3
    m604: m60_4
    m281: m28_1
    m282: m28_2
    m283: m28_3
    m91: m9_1
    m92: m9_2    
    
    Batchmaker:           
        id: m60_1 
        probe:1
        BMLabel:
            text:"M60-1"
            color: root.m601.colour
         
            
